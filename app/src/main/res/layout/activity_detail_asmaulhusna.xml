<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DetailAsmaulHusna"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textnomor"
                    android:text="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="4"/>
                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@color/colorAccent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textnama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ar-Rahman"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/textarti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yang Maha Pemurah"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgplay"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@color/colorAccent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgstop"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorAccent"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/textpenjelasan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Penjelasan"
                android:gravity="center"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textjudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perhatian Nabi Sulaiman pada Bangsa Semut"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    />
                <ImageView
                    android:id="@+id/imgkisah"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@color/colorAccent"/>
                <TextView
                    android:id="@+id/textkisah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panjang Banget"
                    android:gravity="center"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="horizontal">

                <Button
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <Button
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>